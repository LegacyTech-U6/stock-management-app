{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "public/icon svg/CheckedIcon.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
